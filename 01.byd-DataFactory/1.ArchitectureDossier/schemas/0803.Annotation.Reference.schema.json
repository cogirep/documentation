{
  "$schema": "Annotation.Reference.schema.json",
  "$id": "Annotation.Reference.schema.json",
  "type": "object",
  "title": "Annotation schema",
  "definitions": {
    "annotation": {
      "properties": {
        "_id": {
          "$id": "#/properties/_id",
          "type": "string",
          "title": "The _id Schema",
          "default": "",
          "examples": [
            "561515454"
          ],
          "pattern": "^(.*)$"
        },
        "createdAt": {
          "$id": "#/properties/createdAt",
          "type": "string",
          "title": "The Createdat Schema",
          "default": "",
          "examples": [
            "1545454"
          ],
          "pattern": "^(.*)$"
        },
        "revisionId": {
          "$id": "#/properties/revisionId",
          "type": "string",
          "title": "The Revisionid Schema",
          "default": "",
          "examples": [
            "215154"
          ],
          "pattern": "^(.*)$"
        },
        "status": {
          "$id": "#/properties/status",
          "type": "string",
          "title": "The Status Schema",
          "default": "",
          "examples": [
            "ACTIF"
          ],
          "pattern": "^(.*)$"
        },
        "properties": {
          "$id": "#/properties/properties",
          "type": "object",
          "title": "The Properties Schema",
          "required": [
            "key"
          ],
          "properties": {
            "key": {
              "$id": "#/properties/properties/properties/key",
              "type": "string",
              "title": "The Key Schema",
              "default": "",
              "examples": [
                "value"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      },
      "visibility": {
        "type": "string",
        "enum": ["public","private"],
        "description": "is it a public (visible by all) or private (visible by owner Tenant only) annotation"
      },
      "annotationType": {
        "type": "string",
        "enum": ["business","technical"],
        "description": "The type of annotation"
      }

    },
    "required": [
      "_id",
      "createdAt",
      "revisionId",
      "templateId",
      "status",
      "visibility",
      "annotationType"
    ]
  }
}
}